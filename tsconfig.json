{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "strict": true,

    "verbatimModuleSyntax": true,
    "target": "es2020",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "newLine": "lf"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

